<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="320dp"
              android:layout_gravity="center"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_exit_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:text="退出"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_exit_content"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_vertical"
        android:text="您确定要退出吗？"
        android:textColor="#000"
        android:textSize="16sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d1d1d1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btn_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_exit_dialog_bg"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#000"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d1d1d1"/>
        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right_exit_dialog_bg"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#000"/>

    </LinearLayout>


</LinearLayout>